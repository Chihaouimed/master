<odoo>
    <record id="view_pv_inverter_form" model="ir.ui.view">
        <field name="name">pv.inverter.form</field>
        <field name="model">pv.inverter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="number_of_inverters"/>
                        <field name="display_condition"/>
                        <field name="reference"/>
                        <field name="brand"/>
                        <field name="power"/>
                        <field name="generation_capacity"/>
                        <field name="total_power"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pv_inverter_tree" model="ir.ui.view">
        <field name="name">pv.inverter.tree</field>
        <field name="model">pv.inverter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="brand"/>
                <field name="power"/>
                <field name="generation_capacity"/>
                <field name="total_power"/>
            </tree>
        </field>
    </record>

    <record id="action_pv_inverter" model="ir.actions.act_window">
        <field name="name">PV Inverters</field>
        <field name="res_model">pv.inverter</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pv_inverter" name="Inverters" parent="menu_pv_root" action="action_pv_inverter"/>
</odoo>