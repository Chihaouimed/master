<odoo>
    <record id="view_pv_inverter_form" model="ir.ui.view">
        <field name="name">pv.inverter.form</field>
        <field name="model">pv.inverter</field>
        <field name="arch" type="xml">
            <form>
                 <sheet>
                    <group>
                        <!-- Number of Inverters -->
                        <field name="number_of_inverters"/>
                    </group>

                    <!-- Group for Onduleur 1 (always shown) -->
                    <group string="Onduleur 1">
                        <field name="reference_onduleur_pv1_id"/>
                        <field name="marque_onduleur_pv1_id"/>
                        <field name="marque_onduleur_pv1"/>
                        <field name="puissance_onduleur_pv1"/>
                        <field name="calibre_disjoncteur_onduleur_pv1"/>
                        <field name="nombre_onduleur_pv1"/>
                    </group>

                    <!-- Group for Onduleur 2 (only shown if '2' is selected) -->
                    <group string="Onduleur 2" attrs="{'invisible': [('number_of_inverters', '!=', '2')]}">
                        <field name="reference_onduleur_pv2_id"/>
                        <field name="marque_onduleur_pv2_id"/>
                        <field name="marque_onduleur_pv2"/>
                        <field name="puissance_onduleur_pv2"/>
                        <field name="calibre_disjoncteur_onduleur_pv2"/>
                        <field name="nombre_onduleur_pv2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pv_inverter_tree" model="ir.ui.view">
        <field name="name">pv.inverter.tree</field>
        <field name="model">pv.inverter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number_of_inverters"/>
                <field name="reference_onduleur_pv1_id"/>
                <field name="marque_onduleur_pv1_id"/>
                <field name="marque_onduleur_pv1"/>
                <field name="puissance_onduleur_pv1"/>
                <field name="calibre_disjoncteur_onduleur_pv1"/>
                <field name="nombre_onduleur_pv1"/>
                <field name="puissance_totale_ag"/>
            </tree>
        </field>
    </record>

    <record id="action_pv_inverter" model="ir.actions.act_window">
        <field name="name">PV Inverters</field>
        <field name="res_model">pv.inverter</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pv_inverter" name="Onduleurs" parent="menu_pv_root" action="action_pv_inverter"/>
</odoo>