<odoo>
    <!-- Form View -->
    <record id="view_pv_evaluation_form" model="ir.ui.view">
        <field name="name">pv.evaluation.form</field>
        <field name="model">pv.evaluation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_installation" string="View Installation" type="object"
                            class="oe_highlight" icon="fa-arrow-right"/>
                    <button name="action_draft" string="Set to Draft" states="in_progress,canceled" type="object"/>
                    <button name="action_in_progress" string="Start Evaluation" states="draft" type="object" class="oe_highlight"/>
                    <button name="action_done" string="Complete" states="in_progress" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" states="draft,in_progress" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="installation_id"/>
                            <field name="date_evaluation"/>
                            <field name="evaluator_id"/>
                        </group>
                        <group>
                            <field name="performance_ratio"/>
                            <field name="energy_produced"/>
                            <field name="system_efficiency"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Condition Assessment">
                            <group>
                                <field name="panel_condition"/>
                                <field name="inverter_condition"/>
                            </group>
                        </page>
                        <page string="Issues and Recommendations">
                            <group>
                                <field name="issues_found" placeholder="Describe any issues found during evaluation..."/>
                                <field name="recommendations" placeholder="Provide recommendations based on the evaluation..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_pv_evaluation_tree" model="ir.ui.view">
        <field name="name">pv.evaluation.tree</field>
        <field name="model">pv.evaluation</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'"
                  decoration-success="state == 'done'" decoration-danger="state == 'canceled'">
                <field name="name"/>
                <field name="installation_id"/>
                <field name="date_evaluation"/>
                <field name="evaluator_id"/>
                <field name="performance_ratio"/>
                <field name="panel_condition"/>
                <field name="inverter_condition"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_pv_evaluation_search" model="ir.ui.view">
        <field name="name">pv.evaluation.search</field>
        <field name="model">pv.evaluation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="installation_id"/>
                <field name="evaluator_id"/>
                <separator/>
                <filter string="Draft" name="state_draft" domain="[('state','=','draft')]"/>
                <filter string="In Progress" name="state_in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Completed" name="state_done" domain="[('state','=','done')]"/>
                <filter string="Canceled" name="state_canceled" domain="[('state','=','canceled')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_installation" string="Installation" context="{'group_by': 'installation_id'}"/>
                    <filter name="group_by_evaluator" string="Evaluator" context="{'group_by': 'evaluator_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pv_evaluation" model="ir.actions.act_window">
        <field name="name">Evaluations</field>
        <field name="res_model">pv.evaluation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_pv_evaluation_search"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_pv_evaluation" name="Evaluations" parent="menu_pv_root" action="action_pv_evaluation"/>

    <!-- Sequence for automatic numbering -->
    <record id="sequence_pv_evaluation" model="ir.sequence">
        <field name="name">PV Evaluation Sequence</field>
        <field name="code">pv.evaluation.sequence</field>
        <field name="prefix">EVAL/</field>
        <field name="padding">5</field>
    </record>
</odoo>